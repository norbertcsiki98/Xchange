<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/home_pic"
        android:id="@+id/homepic"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/history_pic"
        android:id="@+id/historypic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/exchange_pic"
        android:id="@+id/exchangepic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/notifications_pic"
        android:id="@+id/notificationspic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/profile_pic"
        android:id="@+id/profilepic"
        android:layout_marginLeft="5dp"
        />

</LinearLayout>